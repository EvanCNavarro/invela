run = "NODE_ENV=production PORT=8080 node deployment-server.js"
build = "npm run build"
entrypoint = "deployment-server.js"

excludePaths = [
  # Large asset directories
  "attached_assets",
  "backup_assets",
  "backup_text",
  "cleanup-scripts", 
  "cleanup-plan",
  "uploads",
  "deployment-excluded",
  
  # System directories that add unnecessary size
  ".local",
  ".cache",
  ".pythonlibs",
  ".git",
  "node_modules/.cache"
]

# Force port 8080 for deployment
deploymentTarget = "cloudrun"