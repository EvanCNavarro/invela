run = "NODE_ENV=production PORT=8080 node deployment-server.js"
build = "npm run build"
entrypoint = "deployment-server.js"

excludePaths = [
  "attached_assets",
  "backup_assets",
  "backup_text",
  "cleanup-scripts", 
  "cleanup-plan",
  "uploads",
  "node_modules/.cache",
  ".git",
  "deployment-excluded"
]

# Force port 8080 for deployment
deploymentTarget = "cloudrun"