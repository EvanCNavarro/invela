run = "NODE_ENV=production PORT=8080 node deploy-server.js"
build = "npm run build"
entrypoint = "deployment-entry.js"

excludePaths = [
  "attached_assets",
  "backup_assets",
  "backup_text",
  "cleanup-scripts",
  "uploads",
  "node_modules/.cache",
  ".git",
  "server/routes/fix-missing-file-api.ts",
  "server/routes/fix-ky3p-files.ts",
  "server/routes/transactional-form-routes/fix-missing-file.ts"
]

# Force port 8080 for deployment
deploymentTarget = "cloudrun"