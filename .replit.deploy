run = "NODE_ENV=production PORT=8080 node simple-deploy.js"
build = "npm run build"
entrypoint = "simple-deploy.js"

excludePaths = [
  "attached_assets",
  "backup_assets",
  "backup_text",
  "cleanup-scripts",
  "uploads",
  "node_modules/.cache",
  ".git"
]

# Force port 8080 for deployment
deploymentTarget = "cloudrun"