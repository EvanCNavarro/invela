{
  "run": "node server/deployment-server.js",
  "entrypoint": "server/deployment-server.js",
  "build": "npm run build && node build-for-deployment.js",
  "exclude": [
    "*",
    "**/*",
    "!package.json",
    "!package-lock.json",
    "!dist/public/**/*.html",
    "!dist/public/**/*.js",
    "!dist/public/**/*.css",
    "!dist/public/**/*.png",
    "!dist/public/**/*.jpg",
    "!dist/public/**/*.svg",
    "!dist/public/**/*.ico",
    "!dist/public/**/*.json",
    "!server/deployment-server.js",
    "!node_modules/express/**",
    "!node_modules/http/**",
    "!node_modules/path/**",
    "!node_modules/fs/**"
  ],
  "port": 8080,
  "env": {
    "PORT": "8080",
    "NODE_ENV": "production"
  }
}