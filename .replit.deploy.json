{
  "run": "NODE_ENV=production PORT=8080 node dist/index.js",
  "entrypoint": "server/index.ts",
  "build": "./deploy-simple.sh",
  "exclude": [
    "attached_assets/",
    "backup_assets/",
    "backup_text/",
    "uploads/",
    "node_modules/.cache/",
    "node_modules/typescript/",
    "node_modules/@types/",
    "node_modules/esbuild/",
    ".git/",
    "client/src/",
    "server/src/",
    "*.md",
    "*.sh",
    "!deploy-simple.sh",
    "*.cjs",
    "*.ts",
    "*.tsx",
    "!production-server.js",
    "!dist/**/*.js",
    "!server/**/*.js"
  ],
  "ignorePorts": false,
  "port": 8080
}