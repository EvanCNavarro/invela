{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "noImplicitAny": false,
    "strict": false
  },
  "include": ["./**/*", "../shared/**/*", "../db/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
} 